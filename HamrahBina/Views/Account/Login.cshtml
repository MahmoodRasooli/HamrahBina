@model HamrahBina.Models.ViewModels.Account.LoginViewModel

@{
    ViewData["Title"] = "ورود";
    Layout = "_HomeLayout";
}

<div class="py-5" id="forms-02" style="background: linear-gradient(90deg, rgba(0, 0, 0, 0.3) 10%, rgba(0, 0, 0, 0.3)), url('/images/photo-50.jpg') center center; background-size: cover;">
    <div class="container d-flex flex-column py-5" style="min-height: 105vh;">
        <div class="row my-auto">
            <div class="col-lg-5 col-md-12 col-sm-12 my-auto">
                <div class="card border-0">
                    <div class="card-header bg-transparent px-5">
                        <h2 class="h4 pt-3 pb-2">ورود به سامانه </h2>
                    </div>
                    <div class="card-block pt-5 px-5 pb-1">
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <input asp-for="Email" class="form-control form-control-lg rounded-0" placeholder="ایمیل" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" class="form-control form-control-lg rounded-0" placeholder="رمز عبور" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-lg btn-info mb-4 w-100 rounded-0">ورود به سامانه</button>
                            <hr>
                            <p>
                                <small>
                                    <a class="text-secondary" asp-action="ForgotPassword">بازیابی رمز عبور</a>
                                </small>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
