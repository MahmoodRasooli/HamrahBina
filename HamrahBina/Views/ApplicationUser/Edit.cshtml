@model HamrahBina.Models.Entities.ApplicationUser

@{
    ViewData["Title"] = "کاربران";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>ویرایش اطلاعات @ViewData["Title"]</h2>
        <ol class="breadcrumb">
            <li><a asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i>پیشخوان</a></li>
            <li><a asp-action="Index">لیست @ViewData["Title"]</a></li>
            <li class="active"><strong>ویرایش اطلاعات @ViewData["Title"]</strong></li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action pull-right">
            <a asp-action="Index" class="btn btn-white">بازگشت به لیست</a>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>ویرایش</h5>
                </div>
                <div class="ibox-content">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group row">
                            <div class="col-lg-4">
                                <label asp-for="FirstName" class="control-label"></label>
                                <input asp-for="FirstName" class="form-control" />
                            </div>
                            <div class="col-lg-4" style="margin-top:30px;">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-4">
                                <label asp-for="LastName" class="control-label"></label>
                                <input asp-for="LastName" class="form-control" />
                            </div>
                            <div class="col-lg-4" style="margin-top:30px;">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-4">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" />
                            </div>
                            <div class="col-lg-4" style="margin-top:30px;">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-4">
                                <label asp-for="PhoneNumber" class="control-label"></label>
                                <input asp-for="PhoneNumber" class="form-control" />
                            </div>
                            <div class="col-lg-4" style="margin-top:30px;">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-4">
                                <label asp-for="NationalId" class="control-label"></label>
                                <input asp-for="NationalId" class="form-control" />
                            </div>
                            <div class="col-lg-4" style="margin-top:30px;">
                                <span asp-validation-for="NationalId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-lg-4">
                                <label class="control-label">نقش</label>
                                <br /><br />
                                @for (var i = 0; i < Model.RolesList.ToList().Count; i++)
                                {
                                    <input type="checkbox" asp-for="@Model.RolesList[i].Selected" />
                                    <label asp-for="@Model.RolesList[i].Selected">@Model.RolesList[i].Title</label>
                                    <input type="hidden" asp-for="@Model.RolesList[i].Value" />
                                    <input type="hidden" asp-for="@Model.RolesList[i].Title" />
                                }
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="ذخیره تغییرات" class="btn btn-success" />
                            <a asp-action="Index" class="btn btn-white">بازگشت به لیست</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}